--// ===== Services =====
local Players = game:GetService("Players")
local player = Players.LocalPlayer

--// ===== UI =====
local gui = Instance.new("ScreenGui")
gui.Name = "RepoLoaderUI"
gui.ResetOnSpawn = false
gui.Parent = player:WaitForChild("PlayerGui")

local frame = Instance.new("Frame", gui)
frame.Size = UDim2.new(0, 500, 0, 400)
frame.Position = UDim2.new(0.5, -250, 0.5, -200)
frame.BackgroundColor3 = Color3.fromRGB(20,20,20)
frame.BorderSizePixel = 0
frame.Active = true
frame.Draggable = true
Instance.new("UICorner", frame).CornerRadius = UDim.new(0, 10)

local title = Instance.new("TextLabel", frame)
title.Size = UDim2.new(1, 0, 0, 40)
title.BackgroundTransparency = 1
title.Text = "GitHub Script Loader"
title.Font = Enum.Font.GothamBold
title.TextSize = 20
title.TextColor3 = Color3.fromRGB(155,0,255)

--// ===== Button Maker =====
local function makeButton(text, parent)
    local b = Instance.new("TextButton", parent)
    b.Size = UDim2.new(0, 150, 0, 45)
    b.BackgroundColor3 = Color3.fromRGB(35,35,35)
    b.Text = text
    b.Font = Enum.Font.Gotham
    b.TextSize = 14
    b.TextColor3 = Color3.fromRGB(255,255,255)
    b.AutoButtonColor = true
    Instance.new("UICorner", b).CornerRadius = UDim.new(0, 8)
    return b
end

--// ===== Links =====
local URLS = {
    oi      = "https://raw.githubusercontent.com/114514mim/kdjddjosso/main/oi",
    io      = "https://raw.githubusercontent.com/114514mim/kdjddjosso/main/io",
    f3x     = "https://raw.githubusercontent.com/114514mim/kdjddjosso/refs/heads/main/f3x%E9%94%A4%E5%AD%90",
    un      = "https://raw.githubusercontent.com/114514mim/kdjddjosso/refs/heads/main/U.N%20home",
    s67     = "https://raw.githubusercontent.com/114514mim/kdjddjosso/main/67",
    po      = "https://raw.githubusercontent.com/114514mim/kdjddjosso/main/po",
    mario   = "https://raw.githubusercontent.com/114514mim/kdjddjosso/main/Mario",
    iop     = "https://raw.githubusercontent.com/114514mim/kdjddjosso/main/iop",
    spam    = "https://raw.githubusercontent.com/114514mim/kdjddjosso/main/spam",
    unrain  = "https://raw.githubusercontent.com/114514mim/kdjddjosso/main/U.N%20rain",
    uncafe  = "https://raw.githubusercontent.com/114514mim/kdjddjosso/refs/heads/main/U.N%20cafe",
    music   = "https://raw.githubusercontent.com/114514mim/kdjddjosso/main/%E9%9F%B3%E4%B9%90",
    mage    = "https://pastefy.app/4drqoWDS/raw",
    ak47    = "https://raw.githubusercontent.com/114514mim/kdjddjosso/main/ak47"
}

--// ===== 防重复执行 =====
local running = {}
for k in pairs(URLS) do
    running[k] = false
end

local function run(key)
    if running[key] then return end
    running[key] = true
    task.spawn(function()
        local ok, err = pcall(function()
            loadstring(game:HttpGet(URLS[key]))()
        end)
        if not ok then
            warn(key.." 执行失败：", err)
        end
        running[key] = false
    end)
end

--// ===== Buttons（3 列排列）=====
local buttonNames = {
    "▶ joh hone (r6)","▶ 镰刀恶魔 (r6)","▶ 锤子 (r6)",
    "▶ U.N 的领域","▶ 鸭子","▶ 天空 U.N 图标",
    "▶ 马里奥蘑菇跌落","▶ 天空盒子","▶ 贴图",
    "▶ U.N rain","▶ U.N咖啡厅","▶ 音乐",
    "▶ 大魔法师","▶ AK47(r6)"
}

local buttonKeys = {
    "oi","io","f3x",
    "un","s67","po",
    "mario","iop","spam",
    "unrain","uncafe","music",
    "mage","ak47"
}

local buttons = {}
for i = 1, #buttonNames do
    local col = (i-1) % 3
    local row = math.floor((i-1) / 3)
    local b = makeButton(buttonNames[i], frame)
    b.Position = UDim2.new(0, 20 + col*160, 0, 50 + row*60)
    b.MouseButton1Click:Connect(function()
        run(buttonKeys[i])
    end)
    table.insert(buttons, b)
end

--// ===== 缩小按钮 =====
local toggleBtn = Instance.new("TextButton", frame)
toggleBtn.Size = UDim2.new(0, 60, 0, 30)
toggleBtn.Position = UDim2.new(1, -70, 0, 5)
toggleBtn.Text = "－"
toggleBtn.Font = Enum.Font.GothamBold
toggleBtn.TextSize = 18
toggleBtn.TextColor3 = Color3.fromRGB(255,255,255)
toggleBtn.BackgroundColor3 = Color3.fromRGB(50,50,50)
Instance.new("UICorner", toggleBtn).CornerRadius = UDim.new(0,5)

local collapsed = false
toggleBtn.MouseButton1Click:Connect(function()
    collapsed = not collapsed
    if collapsed then
        frame.Size = UDim2.new(0,120,0,50)
        title.Visible = false
        for _,b in pairs(buttons) do
            b.Visible = false
        end
    else
        frame.Size = UDim2.new(0,500,0,400)
        title.Visible = true
        for _,b in pairs(buttons) do
            b.Visible = true
        end
    end
end)